<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Fluxo para inscrição dos usuários nos módulos dos treinamentos</description>
    <dynamicChoiceSets>
        <description>Lista de treinamentos ativos</description>
        <name>recChoiceTreinamentosAtivos</name>
        <dataType>String</dataType>
        <displayField>Name</displayField>
        <filters>
            <field>Ativo__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Treinamento__c</object>
        <outputAssignments>
            <assignToReference>varIdTreinamentoSelecionado.Id</assignToReference>
            <field>Id</field>
        </outputAssignments>
        <sortField>Name</sortField>
        <sortOrder>Asc</sortOrder>
        <valueField>Id</valueField>
    </dynamicChoiceSets>
    <formulas>
        <description>Exibe o nome do usuário</description>
        <name>UserName</name>
        <dataType>String</dataType>
        <expression>{!$User.FirstName} &amp;  &quot; &quot; &amp; {!$User.LastName}</expression>
    </formulas>
    <interviewLabel>Assistente de Inscrição Flow {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Assistente de Inscrição Flow</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>Flow</processType>
    <screens>
        <description>Auxilia o usuário a se inscrever em módulos de treinamentos</description>
        <name>Screen_Treinamento</name>
        <label>Treinamento</label>
        <locationX>282</locationX>
        <locationY>61</locationY>
        <allowBack>false</allowBack>
        <allowFinish>true</allowFinish>
        <allowPause>false</allowPause>
        <fields>
            <name>lblDisplay</name>
            <fieldText>&lt;p&gt;Olá {!UserName}, por favor selecione um treinamento na lista!&lt;/p&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <fields>
            <name>pklTreinamentosAtivos</name>
            <choiceReferences>recChoiceTreinamentosAtivos</choiceReferences>
            <dataType>String</dataType>
            <fieldText>Treinamentos Ativos</fieldText>
            <fieldType>DropdownBox</fieldType>
            <isRequired>true</isRequired>
        </fields>
        <showFooter>true</showFooter>
        <showHeader>true</showHeader>
    </screens>
    <start>
        <locationX>117</locationX>
        <locationY>61</locationY>
        <connector>
            <targetReference>Screen_Treinamento</targetReference>
        </connector>
    </start>
    <status>Draft</status>
    <variables>
        <description>Id do treinamento selecionado</description>
        <name>varIdTreinamentoSelecionado</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
        <objectType>Treinamento__c</objectType>
    </variables>
</Flow>

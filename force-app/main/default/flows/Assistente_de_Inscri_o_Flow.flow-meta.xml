        </defaultConnector>
        <defaultConnectorLabel>Não tem modulos</defaultConnectorLabel>
        <rules>
            <name>Tem_modulos_no_treinamento</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>getRecModulosDoTreinamento</leftValueReference>
